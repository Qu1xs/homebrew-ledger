<h1>Recipes</h1> 
<container>
  <h2>Your Recipes</h2><a class="button" href="/recipes/new">New Recipe</a><br>
  <!-- To do: Add validations and display user-owned private recipes -->
  <% @user_recipes.each do |recipe| %>
    <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
    <h4>Ingredients:</h4>
      <% recipe.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %>: <%= ingredient.quantity %></p>
      <% end %>
    <!-- To do: Add recipe creator here (needs a "findable" class method) -->
    <% end %>
</container>

